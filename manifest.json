{
  "manifest_version": 2,
  "name": "LiveHosts",
  "version": "0.1",
  "icons": {
    "32": "livehosts-32.png",
    "48": "livehosts-48.png"
  },
  "description": "Switch your host/IP mappings in real time without editing your hosts file",
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [ "switcher.js" ],
      "matches": [ "http://*/*", "https://*/*", "file://*/*" ]
    }
  ],
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "http://*/*",
    "https://*/*"
  ]
}
